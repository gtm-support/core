{
  "hooks": {
    "before:init": ["pnpm run clean", "pnpm install"],
    "after:bump": [
      "pnpm run format",
      "pnpm run lint",
      "pnpm run test run",
      "pnpm run build"
    ]
  },
  "plugins": {
    "@release-it/keep-a-changelog": {
      "filename": "CHANGELOG.md",
      "strictLatest": true,
      "addUnreleased": true,
      "keepUnreleased": true,
      "addVersionUrl": true,
      "versionUrlFormats": {
        "repositoryUrl": "https://github.com/gtm-support/core",
        "unreleasedUrl": "{repositoryUrl}/compare/{tagName}...{head}",
        "versionUrl": "{repositoryUrl}/compare/{previousTag}...{tagName}",
        "firstVersionUrl": "{repositoryUrl}/releases/tag/{tagName}"
      },
      "head": "main"
    }
  },
  "git": {
    "commitMessage": "v${version}"
  }
}
